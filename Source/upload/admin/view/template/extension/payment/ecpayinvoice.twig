{{ header }}
{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-popular" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-ecpayinvoice" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-ecpayinvoice-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="payment_ecpayinvoice_status" id="input-ecpayinvoice-status" class="form-control">
            {% for ecpayl_status in payment_ecpayinvoice_statuses %}
              {% if ecpayl_status.value == payment_ecpayinvoice_status %}
                <option value="{{ ecpayl_status.value }}" selected="selected">{{ ecpayl_status.text }}</option>
              {% else %}
                <option value="{{ ecpayl_status.value }}">{{ ecpayl_status.text }}</option>
              {% endif %}
            {% endfor %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-name">{{ entry_mid }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_ecpayinvoice_mid" value="{{ payment_ecpayinvoice_mid }}" placeholder="{{ entry_mid }}" id="input-name" class="form-control" />
            {% if error_mid %}
              <div class="text-danger">{{ error_mid }}</div>
            {% endif %}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-name">{{ entry_hashkey }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_ecpayinvoice_hashkey" value="{{ payment_ecpayinvoice_hashkey }}" placeholder="{{ entry_hashkey }}" id="input-name" class="form-control" />
            {% if error_hashkey %}
              <div class="text-danger">{{ error_hashkey }}</div>
            {% endif %}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-name">{{ entry_hashiv }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_ecpayinvoice_hashiv" value="{{ payment_ecpayinvoice_hashiv }}" placeholder="{{ entry_hashiv }}" id="input-name" class="form-control" />
            {% if error_hashiv %}
              <div class="text-danger">{{ error_hashiv }}</div>
            {% endif %}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-ecpayinvoice-autoissue">{{ entry_autoissue }}</label>
            <div class="col-sm-10">
              <select name="payment_ecpayinvoice_autoissue" id="input-ecpayinvoice-autoissue" class="form-control">
            {% for ecpayi_autoissue in payment_ecpayinvoice_autoissues %}
              {% if ecpayi_autoissue.value == payment_ecpayinvoice_autoissue %}
                <option value="{{ ecpayi_autoissue.value }}" selected="selected">{{ ecpayi_autoissue.text }}</option>
              {% else %}
                <option value="{{ ecpayi_autoissue.value }}">{{ ecpayi_autoissue.text }}</option>
              {% endif %}
            {% endfor %}
              </select>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}